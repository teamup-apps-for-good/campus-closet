<style>
  .logo-img {
    max-width: 50px;
    max-height: 50px;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" style="font-size: 20px; font-weight: bold;">
    <%= image_tag("logo.png", alt: "Logo", class: "logo-img", style: "margin-right: 10px;") %>
    Campus Closet
  </a>
  <div class="navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto" style="font-size: 18px; font-weight: bold;">
      <li class="nav-item">
        <%= link_to "Home", "/", class: 'nav-link', style: 'transition: background-color 0.3s;' %>
      </li>
      <% if current_user && current_user.student %>
        <li class="nav-item">
          <%= link_to "Student Profile", "/", class: 'nav-link' %>
        </li>
      <% end %>
      <% if current_user && !current_user.student %>
        <li class="nav-item">
          <%= link_to "Donor Dashboard", "/", class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
    <div class="navbar-text">
      <% if current_user %>
        <%= link_to 'Sign out', signout_path %>
      <% else %>
        <%= button_to "Login with Google", "/auth/google_oauth2", method: :post, data: { turbo: "false" } %>
      <% end %>
    </div>
  </div>
</nav>