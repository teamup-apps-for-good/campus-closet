<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <div class="card h-100">
        <div class="card-header">
          Chatroom
        </div>
        <div class="card-body" id="chatbox">
          <%= render partial: "messages/chatbox", locals: { messages: @messages } %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-12">
          <%= form_with(model: @message, url: item_chatroom_messages_path(@item, @message), id: "message_form", method: :post, data: { controller: "reset-form", action: "turbo:submit-end->reset-form#clearInput" }, local: true) do |form| %>
            <div class="mb-3">
              <%= form.text_field :body, id: "chat-input", class: "form-control", placeholder: "Type a message...", data: { reset_form_target: "input" } %>
            </div>
            <%= form.submit "Send", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card h-200">
        <div class="card-body">
          <%= render @item %>
        </div>
      </div>
    </div>
  </div>
</div>
