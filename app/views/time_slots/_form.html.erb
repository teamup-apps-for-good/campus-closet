<!-- app/views/time_slots/new.html.erb -->
<div id="form-container">
  <%= form_with(model: TimeSlot.new, url: time_slots_path, local: true) do |form| %>
    <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>
    <% if @time_slot.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@time_slot.errors.count, "error") %> prohibited this time slot from being saved:</h2>
        <ul>
          <% @time_slot.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div id="time-slots-fields">
      <div class="time-slot" id="time-slot-template">
        <%= form.label :start_time, "Start Time", style: "display: block" %>
        <%= form.datetime_field :start_time, name: 'time_slots[][start_time]', class: 'start-time', onchange: 'updateEndTime(this)' %>
        <%= form.label :end_time, "End Time", style: "display: block" %>
        <span class="display-end-time"></span>
        <%= form.hidden_field :end_time, name: 'time_slots[][end_time]', class: 'end-time' %>
        </div>
    </div>

    <button type="button" id="add-time-slot" onclick="addTimeSlot()">Add Another Time Slot</button>
    <%= form.submit 'Create Time Slots', id: 'submit-time-slots' %>
  <% end %>
</div>


<script>
function updateEndTime(element) {
  var startTimeInput = element;
  var timeSlot = startTimeInput.closest('.time-slot');
  var endTimeInput = timeSlot.querySelector('.end-time');
  var endTimeDisplay = timeSlot.querySelector('.display-end-time');

  if (startTimeInput.value) {
    var startTime = new Date(startTimeInput.value);
    startTime.setMinutes(startTime.getMinutes() + 30);
    endTimeInput.value = startTime.toISOString();
    endTimeDisplay.textContent = startTime.toLocaleString();
  } else {
    endTimeInput.value = '';
    endTimeDisplay.textContent = '';
  }
}

function addTimeSlot() {
  var container = document.getElementById('time-slots-fields');
  var original = container.querySelector('.time-slot:last-child');
  var clone = original.cloneNode(true);
  var index = container.querySelectorAll('.time-slot').length;

  var clonedStartTime = clone.querySelector('.start-time');
  clonedStartTime.name = `time_slots[${index}][start_time]`;
  clonedStartTime.value = '';

  clonedStartTime.removeEventListener('change', updateEndTime);
  clonedStartTime.addEventListener('change', function() {
    updateEndTime(this);
  });

  var clonedEndTimeDisplay = clone.querySelector('.display-end-time');
  clonedEndTimeDisplay.textContent = '';

  container.appendChild(clone);
}



</script>