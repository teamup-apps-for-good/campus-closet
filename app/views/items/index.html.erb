
<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
<div class="container">
<h1 class="mt-4">Clothing Type:</h1>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <% Type.all.each do |type| %>
    <%= link_to "View " + type.name, items_by_type_path(type: type.name), class: "nav-link" %>
  <% end %>
</nav>

  <h1 class="mt-4">Filter</h1>
  <%= render "filter" %>
  <div class="row">
    <% @items.each do |item| %>
      <% if item.status.name == "Available" %>
        <div class="col-md-3 mb-3">
          <div class="card">
            <div class="card-body">
              <%= render item %>
              <p class="card-text">
                <%= link_to "Show this item", item, class: "btn btn-primary" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>

<% unless session[:user_id].nil? %>
  <% if current_user.donor %>
    <%= link_to "New item", new_item_path, class: "btn btn-primary" %>
  <% end %>
<% end %>