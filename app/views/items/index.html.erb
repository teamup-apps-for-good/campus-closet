<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <% if item.image_url.present? %>
  <%= image_tag item.image_url, :style => "width: 20vw", class: "item-image" %>
<% else %>
  <p>No image available</p>
<% end %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", item %>
    </p>
  <% end %>
</div>

<%= link_to "New item", new_item_path %>

<%= link_to 'Go to Users', users_path, class: 'btn btn-primary', style: 'position: absolute; top: 15px; right: 15px; color:red;' %>

<%= render "filter" %>
