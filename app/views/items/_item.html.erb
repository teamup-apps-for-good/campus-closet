<div id="<%= dom_id item %>">
    <% if item.image_url.present? %>
      <%= image_tag item.image_url, class: "card-img-top img-fluid", alt: "Item Image", style: "object-fit: scale-down; height: 250px;" %>
    <% else %>
      <img src="placeholder_image_url" class="card-img-top img-fluid" alt="No image available" style="object-fit: contain; height: 250px;">
    <% end %>

    <strong>Color:</strong>
    <%= item.color.name %>
    <br>
    
    <strong>Type:</strong>
    <%= item.type.name %>
    <br>

    <strong>Gender:</strong>
    <%= item.gender.name %>
    <br>

    <strong>Description:</strong>
    <%= item.description %>
    <br>

    <strong>Size:</strong>
    <%= item.size.name %>
    <br>

    <strong>Condition:</strong>
    <%= item.condition.name %>
    <br>

    <% if item.user.present? %>
      <p>
        <strong>Donor:</strong>
        <%= link_to "#{item.user.first} #{item.user.last}", user_donor_path(item.user) %>
      </p>
    <% end %>
</div>